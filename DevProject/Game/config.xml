<!-- Config file for the game -->

<config>
  <app framerate_cap="60">
    <title>Kunai Warrior</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="false"/>
  </renderer>

  <window>
    <resolution width="720" height="640" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="true"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
  </map>

  <music intro="audio\music\Intro.ogg" level="audio\music\Level.ogg"/>
  
  <gui>
    <atlas file="gui/1.png"/>
  </gui>

</config>